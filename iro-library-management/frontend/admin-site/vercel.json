{
  "version": 2,
  "name": "iro-library-admin-site",
  "builds": [
    {
      "src": "frontend/admin-site/next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "frontend/admin-site/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://iro-library-backend.vercel.app/api"
  }
}
